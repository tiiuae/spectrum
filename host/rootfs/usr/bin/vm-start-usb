foreground { s6-rc -bu change ext-rc } 
foreground { s6-rc -l /run/s6-rc.ext -u change ${1} }
foreground { sleep 10 }
foreground { ch-remote --api-socket /run/service/ext-${1}/env/cloud-hypervisor.sock add-vsock cid=4,socket=/run/u.${1}.socket }
foreground { sh -c "cd run && nohup /usr/bin/__e ${1} &" }